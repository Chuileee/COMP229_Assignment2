<%- include ../partials/header.ejs %>
<%- include ../partials/top_nav.ejs %>

<main class="container">
    <form class="form" method="POST">
        <div class="form-group">
          <label for="pname">Project Title:</label>
          <input type="text" class="form-control" id="pname" name="pname">
        </div>
        <div class="form-group">
            <label for="pdescription">Project Description:</label>
            <textarea class="form-control" id="pdescription" name="pdescription"></textarea>
        </div>
        <div class="form-group">
            <label for="pdeadline">Project Deadline:</label>
            <input type="date" class="form-control" id="pdeadline" name="pdeadline">
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="loanApplied" name="loanApplied">
            <label class="form-check-label" for="loanApplied">
              Apply for a Loan
            </label>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</main>

