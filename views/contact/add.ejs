<main class="container">
    <form class="form" method="POST">
        <div class="form-group">
          <h2> Enter your Contact info</h2>
          <input type="text" name="fname" id="fname" class="form-control" placeholder="First Name" required>
        </div>
        <div class="form-group">
          <input type="text" name="lName" id="lName" class="form-control" placeholder="Last Name" required>
        </div>
        <div class="form-group">
          <input type="tel" name="cphone" id="cphone" class="form-control" placeholder="Phone Number" required>
        </div>
        <div class="form-group">
          <input type="email" name="cemail" id="cemail" class="form-control" placeholder="Email Address" required>
        </div>
        <div class="form-group">
          <textarea name="cmessage" id="cmessage" class="form-control" placeholder="Message" rows="3" required></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</main>

